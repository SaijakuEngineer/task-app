<div class="modal fade" id="taskEditModal<%= task.id %>" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">タスク編集</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with model: @task, url: task_update_path, method: :patch, local: true do |f| %>
        <%= f.hidden_field :id, value: task.id%>
        <div class="modal-body">
          <div class='row'>
            <div class='col-12'>
              <div class='form-group'>
                <%= f.label :title %>
                <%= f.text_field :title, class: 'form-control', value: task.title %>
              </div>
            </div>
            <div class='col-12'>
              <div class='form-group'>
                <%= f.label :description%>
                <%= f.text_field :description, class: 'form-control', value: task.description %>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          <%= f.submit '更新', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>